<div>
  <div>
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Name:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
      </div>
    </form>
  </div>
</div>




<form method="post" onsubmit="return submitUserForm();">
    <div class="g-recaptcha" data-sitekey="6Lev-EEkAAAAABosiOE7FUlzVg1bpquITPkjx5TP" data-callback="verifyCaptcha"></div>
    <div id="g-recaptcha-error"></div>
    <input type="submit" name="submit" value="Submits" />
    <button class="btn btn-primary" type="submit">Login</button>
</form>




<script>
var recaptcha_response = '';
function submitUserForm() {
    if(recaptcha_response.length == 0) {
        document.getElementById('g-recaptcha-error').innerHTML = '<span style="color:red;">This field is required.</span>';
        return false;
    }
    return true;
}
 
function verifyCaptcha(token) {
    recaptcha_response = token;
    document.getElementById('g-recaptcha-error').innerHTML = '';
}
</script>